<Window x:Class="WpfApplicationDemo.WindowAsync"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationDemo"
        mc:Ignorable="d"
        Title="WindowAsync" Height="300" Width="469">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="110,40,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="110,100,0,0" TextWrapping="Wrap" Text="点击按钮异步更新文本" VerticalAlignment="Top" Width="265"/>
        <Button x:Name="btnStart" Content="StartTask" HorizontalAlignment="Left" Margin="30,138,0,0" VerticalAlignment="Top" Width="75" Click="button_Copy_Click"/>
        <Button x:Name="btnStop" Content="StopTask" HorizontalAlignment="Left" Margin="30,183,0,0" VerticalAlignment="Top" Width="75" Click="btnStop_Click"/>

    </Grid>
</Window>
